<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Project Categories | HackStack</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
  <link rel="stylesheet" href="/css/category.css"/>
</head>
<body>
  <div class="main py-5">
    <div class="container">
      <h2 class="mb-4 text-center text-white">Explore Project Categories</h2>
      <div class="row">
        <% for(let category of categories) { %>
          <div class="col-md-6 col-lg-4 mb-4">
            <div class="card h-100 shadow-sm">
              <div class="card-body d-flex flex-column">
                <div class="d-flex align-items-center mb-3">
                  <img src="<%= category.image_link %>" alt="image" width="40" height="40" class="me-2" />
                  <h5 class="card-title mb-0"><%= category.title %></h5>
                </div>
                <p class="card-text">
                  <%= category.description %>
                </p>
                <form action="/category/<%= category._id %>" method="GET" class="mt-auto">  
                  <button class="btn btn-outline-secondary mt-auto">View Ideas</button>
                </form>
              </div>
            </div>
          </div>
        <% } %>
      </div>
    </div>
  </div>

    
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>

