<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>Project Details | HackStack</title>
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
  <link rel="stylesheet" href="styles.css" />

  <style>
    body {
      background-color: #121212;
      color: #f1f1f1;
    }

    .card, .list-group-item {
      background-color: #1e1e1e;
      color: #fff;
    }

    pre {
      background-color: #2b2b2b;
      color: #f8f8f2;
      font-size: 0.9rem;
    }

    h2, h5 {
      color: #ffffff;
    }

    .btn-secondary {
      background-color: #333;
      border-color: #444;
    }

    .btn-secondary:hover {
      background-color: #444;
    }

    .list-group-item {
      border-color: #333;
    }
  </style>
</head>
<body>
  <div class="container py-5">
    <h2 class="mb-4 text-center">Project Idea: <%= categories.projects[projects.count].title %></h2>

    <!-- Project About -->
    <div class="mb-4">
      <h5>About the Project</h5>
      <p>
        <%= categories.projects[projects.count].description %>
      </p>
    </div>

    <!-- Technologies Used -->
    <div class="mb-4">
      <h5>Technologies Used</h5>
      <ul class="list-group list-group-flush">
        <% for (let tech of projects.tools) { %>
          <li class="list-group-item"><%= tech %></li>
        <% } %>
      </ul>
    </div>

    <!-- difficulty -->
    <div class="mb-4">
      <h5>Difficulty</h5>
      <ul class="list-group list-group-flush">
        <li class="list-group-item"><%= projects.difficulty %></li>
      </ul>
    </div>

    <!-- estimate_time -->
    <div class="mb-4">
      <h5>Estimate Time</h5>
      <ul class="list-group list-group-flush">
        <li class="list-group-item"><%= projects.estimate_time %></li>
      </ul>
    </div>

    <!-- file_structure -->
    <div class="mb-4">
      <h5>File Structure</h5>
        <pre><%= projects.file_structure %></pre>
    </div>

    <!-- scope -->
    <div class="mb-4">
      <h5>Scope</h5>
      <ul class="list-group list-group-flush">
        <li class="list-group-item"><%= projects.scope %></li>
        
      </ul>
    </div>

    <!-- Template Code -->
    <div class="mb-4">
        <h5>Starter Template Code</h5>
        <pre class="bg-dark text-white p-3 rounded">
          <%= projects.code %>
        </pre>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
